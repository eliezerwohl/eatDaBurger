<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-4 col-md-offset-4">
      <h2 class="text-center"> enter burger name below</h2>
      <form action="/newburger" method="POST" >
        <input class="form-control" type="text" name="burgerName" value="">
        <button type="submit" class="btn btn-info btn-block">CREATE!</button>
      </form>
    </div>
    <div class="col-md-6 text-center">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3> Burgers awaiting to be eaten</h3>
        </div>
        <div class="panel-body">
        {{#each Burgers}}
        {{#unless this.devoured}}
          <div style="border-bottom:1px solid gray;">
            <h5>{{this.burgerName}}</h5>
            <form method="post" action="/devour/{{this.burgerName}}"">
              <button type="submit" class="btn btn-warning">CONSUME THIS BURGER!</button>
            </form> 
          </div>
        {{/unless}}
        {{/each}}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-warning">
        <div class="panel-heading"><h3 class="text-center"> Hall of eaten burgers </h3>
        </div>
        <div class="panel-body">   
        {{#each Burgers}}
        {{#if this.devoured}}
          <div class='text-center'>
            <h5>{{this.burgerName}} </h5>
          </div>
        {{/if}}
        {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>



